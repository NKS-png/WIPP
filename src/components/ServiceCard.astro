---
const { service } = Astro.props;
---

<div class="border border-neutral-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
  <h3 class="text-lg font-semibold mb-2">{service.title}</h3>
  <p class="text-neutral-600 mb-4 line-clamp-3">{service.description}</p>
  <div class="flex justify-between items-center">
    <div>
      <span class="text-2xl font-bold text-neutral-900">${service.price}</span>
      <span class="text-sm text-neutral-500 ml-2">USD</span>
    </div>
    <div class="text-right">
      <p class="text-sm text-neutral-500">{service.delivery_days} day{service.delivery_days !== 1 ? 's' : ''} delivery</p>
      <button class="mt-2 bg-neutral-900 text-white px-4 py-2 rounded-lg hover:bg-neutral-800 transition-colors text-sm">
        Order Now
      </button>
    </div>
  </div>
</div>