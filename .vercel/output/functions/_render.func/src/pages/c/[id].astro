            </div>
            <div class="pt-6 border-t border-neutral-100 dark:border-neutral-800 flex justify-end gap-4">
              <button type="button" id="cancel-settings-btn" class="px-6 py-3 font-bold text-neutral-500 hover:text-neutral-900 dark:hover:text-white">Cancel</button>
              <button type="submit" class="px-8 py-3 bg-neutral-900 dark:bg-white text-white dark:text-black rounded-xl font-bold hover:shadow-lg transition-transform hover:scale-[1.02]">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  )}

  <div id="post-modal" class="fixed inset-0 z-50 hidden flex items-center justify-center px-4">
    <div class="absolute inset-0 bg-black/60 backdrop-blur-sm" onclick="document.getElementById('post-modal').classList.add('hidden')"></div>
    <div class="relative bg-white dark:bg-neutral-900 w-full max-w-lg rounded-2xl shadow-2xl p-6 animate-fade-in-up max-h-[90vh] overflow-y-auto">
        <h3 class="font-bold text-lg dark:text-white mb-4">Create Post</h3>
        <form id="create-post-form">
            <div class="mb-4">
                <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">Post Type</label>
                <div class="flex gap-4">
                    <label class="flex items-center">
                        <input type="radio" name="post-type" value="portfolio" checked class="mr-2">
                        <span class="text-sm dark:text-white">Portfolio</span>
                    </label>
                    <label class="flex items-center">
                        <input type="radio" name="post-type" value="workshop" class="mr-2">
                        <span class="text-sm dark:text-white">Workshop</span>
                    </label>
                </div>
            </div>
            <div id="workshop-brief" class="hidden space-y-4 mb-4">
                <div>
                    <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">Stage</label>
                    <select id="work-stage" class="w-full bg-neutral-50 dark:bg-neutral-800 rounded-xl p-3 outline-none dark:text-white">
                        <option value="idea">Idea</option>
                        <option value="draft">Draft</option>
                        <option value="rough">Rough</option>
                        <option value="polish">Polish</option>
                        <option value="final">Final</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">Intent</label>
                    <textarea id="intent" rows="2" class="w-full bg-neutral-50 dark:bg-neutral-800 rounded-xl p-3 outline-none resize-none dark:text-white" placeholder="What are you trying to achieve?" required></textarea>
                </div>
                <div>
                    <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">Feedback Wanted</label>
                    <div class="flex flex-wrap gap-2">
                        <label class="flex items-center"><input type="checkbox" name="feedback-goals" value="anatomy" class="mr-2"><span class="text-sm dark:text-white">Anatomy</span></label>
                        <label class="flex items-center"><input type="checkbox" name="feedback-goals" value="lighting" class="mr-2"><span class="text-sm dark:text-white">Lighting</span></label>
                        <label class="flex items-center"><input type="checkbox" name="feedback-goals" value="color" class="mr-2"><span class="text-sm dark:text-white">Color</span></label>
                        <label class="flex items-center"><input type="checkbox" name="feedback-goals" value="composition" class="mr-2"><span class="text-sm dark:text-white">Composition</span></label>
                        <label class="flex items-center"><input type="checkbox" name="feedback-goals" value="style" class="mr-2"><span class="text-sm dark:text-white">Style</span></label>
                    </div>
                </div>
            </div>
            <textarea id="post-content" rows="4" class="w-full bg-neutral-50 dark:bg-neutral-800 rounded-xl p-4 outline-none resize-none dark:text-white" placeholder="What's on your mind?" required></textarea>
            <div id="post-image-preview" class="hidden mt-4">
              <img class="w-full h-auto rounded-lg" />
              <button type="button" id="remove-post-image" class="mt-2 text-xs text-red-500 hover:text-red-700">Remove image</button>
            </div>
            <div class="flex justify-between items-center mt-4">
              <button type="button" id="add-post-image" class="text-neutral-500 hover:text-neutral-900 dark:hover:text-white text-sm font-medium flex items-center gap-2">
                <span>üì∑</span> Add Image
                <input type="file" id="post-image-input" accept="image/*" class="hidden" />
              </button>
              <div class="flex gap-2">
                <button type="button" class="px-4 py-2 text-neutral-500 hover:text-black dark:hover:text-white" onclick="document.getElementById('post-modal').classList.add('hidden')">Cancel</button>
                <button type="submit" class="bg-neutral-900 dark:bg-white text-white dark:text-black px-6 py-2 rounded-full font-bold text-sm">Post</button>
              </div>
            </div>
        </form>
    </div>
  </div>

</BaseLayout>

<style>
  .input-field {
    @apply w-full px-4 py-3 rounded-xl bg-neutral-50 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 text-neutral-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-black dark:focus:ring-white transition-all;
  }
  .animate-fade-in-up { animation: fadeInUp 0.2s ease-out forwards; }
  @keyframes fadeInUp { from { opacity: 0; transform: scale(0.95); } to { opacity: 1; transform: scale(1); } }
</style>

<script define:vars={{ communityId: id }}>
  let postImageFile = null;
  let iconImageFile = null;
  let bannerImageFile = null;

  // --- DRAG & DROP FOR COMMUNITY IMAGES ---
  function setupImageUpload(dropZoneId, fileInputId, previewId, placeholderId, previewImgId, removeId, fileVar) {
    const dropZone = document.getElementById(dropZoneId);
    const fileInput = document.getElementById(fileInputId);
    const preview = document.getElementById(previewId);
    const placeholder = document.getElementById(placeholderId);
    const previewImg = document.getElementById(previewImgId);
    const removeBtn = document.getElementById(removeId);

    if (!dropZone || !fileInput) return;

    // Click to browse
    dropZone.addEventListener('click', () => fileInput.click());

    // Drag & drop events
    dropZone.addEventListener('dragover', (e) => {
      e.preventDefault();
      dropZone.classList.add('border-blue-400', 'bg-blue-50', 'dark:bg-blue-900/20');
    });

    dropZone.addEventListener('dragleave', (e) => {
      e.preventDefault();
      dropZone.classList.remove('border-blue-400', 'bg-blue-50', 'dark:bg-blue-900/20');
    });

    dropZone.addEventListener('drop', (e) => {
      e.preventDefault();
      dropZone.classList.remove('border-blue-400', 'bg-blue-50', 'dark:bg-blue-900/20');
      
      const files = e.dataTransfer.files;
      if (files.length > 0) {
        handleImageFile(files[0], fileVar, preview, placeholder, previewImg);
      }
    });

    // File input change
    fileInput.addEventListener('change', (e) => {
      if (e.target.files && e.target.files[0]) {
        handleImageFile(e.target.files[0], fileVar, preview, placeholder, previewImg);
      }
    });

    // Remove button
    if (removeBtn) {
      removeBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        if (fileVar === 'icon') iconImageFile = null;
        if (fileVar === 'banner') bannerImageFile = null;
        preview.classList.add('hidden');
        placeholder.classList.remove('hidden');
        fileInput.value = '';
      });
    }
  }

  function handleImageFile(file, type, preview, placeholder, previewImg) {
    const maxSize = type === 'banner' ? 5 * 1024 * 1024 : 2 * 1024 * 1024; // 5MB for banner, 2MB for icon
    
    if (file.size > maxSize) {
      alert(`Image must be less than ${type === 'banner' ? '5MB' : '2MB'}`);
      return;
    }

    if (!file.type.startsWith('image/')) {
      alert('Please select an image file');
      return;
    }

    // Store file
    if (type === 'icon') iconImageFile = file;
    if (type === 'banner') bannerImageFile = file;

    // Show preview
    const reader = new FileReader();
    reader.onload = (e) => {
      previewImg.src = e.target.result;
      preview.classList.remove('hidden');
      placeholder.classList.add('hidden');
    };
    reader.readAsDataURL(file);
  }

  // Setup drag & drop for both images
  setupImageUpload('icon-drop-zone', 'icon-file-input', 'icon-preview', 'icon-placeholder', 'icon-preview-img', 'remove-icon', 'icon');
  setupImageUpload('banner-drop-zone', 'banner-file-input', 'banner-preview', 'banner-placeholder', 'banner-preview-img', 'remove-banner', 'banner');

  // --- DRAWER LOGIC ---
  const drawerContainer = document.getElementById('settings-drawer-container');
  const drawerBackdrop = document.getElementById('drawer-backdrop');
  const drawerPanel = document.getElementById('drawer-panel');
  const openBtn = document.getElementById('open-settings-btn');
  const closeBtns = [
    document.getElementById('close-settings-btn'),
    document.getElementById('cancel-settings-btn'),
    drawerBackdrop
  ];

  function openDrawer() {
    if(!drawerContainer) return;
    drawerContainer.classList.remove('hidden');
    setTimeout(() => {
      drawerBackdrop.classList.remove('opacity-0');
      drawerPanel.classList.remove('translate-y-full');
    }, 10);
  }

  function closeDrawer() {
    if(!drawerContainer) return;
    drawerBackdrop.classList.add('opacity-0');
    drawerPanel.classList.add('translate-y-full');
    setTimeout(() => {
      drawerContainer.classList.add('hidden');
    }, 300);
  }

  if (openBtn) openBtn.addEventListener('click', openDrawer);
  closeBtns.forEach(btn => btn?.addEventListener('click', closeDrawer));

  // --- JOIN / LEAVE LOGIC ---
  const joinBtn = document.getElementById('join-btn');
  const leaveBtn = document.getElementById('leave-btn');

  if (joinBtn) {
    joinBtn.addEventListener('click', async () => {
      try {
        const response = await fetch('/api/community/join', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ community_id: communityId })
        });
        
        if (response.ok) {
          window.location.reload();
        } else {
          alert('Failed to join community');
        }
      } catch (error) {
        console.error('Error joining community:', error);
        alert('Failed to join community');
      }
    });
  }

  if (leaveBtn) {
    leaveBtn.addEventListener('click', async () => {
      if(!confirm('Leave this community?')) return;
      
      try {
        const response = await fetch('/api/community/leave', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ community_id: communityId })
        });
        
        if (response.ok) {
          window.location.reload();
        } else {
          alert('Failed to leave community');
        }
      } catch (error) {
        console.error('Error leaving community:', error);
        alert('Failed to leave community');
      }
    });
  }

  // --- IMAGE UPLOAD FOR POSTS ---
  const addImageBtn = document.getElementById('add-post-image');
  const imageInput = document.getElementById('post-image-input');
  const imagePreview = document.getElementById('post-image-preview');
  const removeImageBtn = document.getElementById('remove-post-image');

  if (addImageBtn && imageInput) {
    addImageBtn.addEventListener('click', () => imageInput.click());
  }

  if (imageInput) {
    imageInput.addEventListener('change', (e) => {
      if (e.target.files && e.target.files[0]) {
        const file = e.target.files[0];
        // BANDWIDTH PROTECTION: Limit post images to 2MB
        if (file.size > 2 * 1024 * 1024) {
          alert('Max 2MB');
          return;
        }
        postImageFile = file;
        const reader = new FileReader();
        reader.onload = (e) => {
          const img = imagePreview.querySelector('img');
          img.src = e.target.result;
          imagePreview.classList.remove('hidden');
        };
        reader.readAsDataURL(file);
      }
    });
  }

  if (removeImageBtn) {
    removeImageBtn.addEventListener('click', () => {
      postImageFile = null;
      imagePreview.classList.add('hidden');
      if (imageInput) imageInput.value = '';
    });
  }

  // --- POST TYPE TOGGLE ---
  const postTypeRadios = document.querySelectorAll('input[name="post-type"]');
  const workshopBrief = document.getElementById('workshop-brief');
  const intentField = document.getElementById('intent');

  postTypeRadios.forEach(radio => {
    radio.addEventListener('change', (e) => {
      if (e.target.value === 'workshop') {
        workshopBrief.classList.remove('hidden');
        intentField.setAttribute('required', 'true');
      } else {
        workshopBrief.classList.add('hidden');
        intentField.removeAttribute('required');
        // Clear the intent field when switching to portfolio
        intentField.value = '';
      }
    });
  });

  // --- POST LOGIC ---
  const postForm = document.getElementById('create-post-form');
  if (postForm) {
    postForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      console.log('Form submitted');
      
      const content = document.getElementById('post-content').value;
      const postType = document.querySelector('input[name="post-type"]:checked').value;
      
      console.log('Form data:', { content, postType });
      
      if (!content.trim()) {
        alert('Please enter some content');
        return;
      }

      try {
        let imageUrl = null;
        
        // Upload image first if selected
        if (postImageFile) {
          console.log('Uploading image...');
          const imageFormData = new FormData();
          imageFormData.append('image', postImageFile);
          imageFormData.append('folder', 'posts');
          
          const imageResponse = await fetch('/api/upload-image', {
            method: 'POST',
            body: imageFormData
          });
          
          if (imageResponse.ok) {
            const imageResult = await imageResponse.json();
            imageUrl = imageResult.url;
            console.log('Image uploaded:', imageUrl);
          } else {
            alert('Failed to upload image');
            return;
          }
        }

        // Prepare post data - FIXED RPC CALL (removed p_user_id)
        const postData = {
          p_community_id: communityId,
          p_content: content,
          p_work_stage: null,
          p_feedback_goals: null,
          p_image_url: imageUrl
        };

        if (postType === 'workshop') {
          const workStage = document.getElementById('work-stage').value;
          const intent = document.getElementById('intent').value;
          const feedbackGoals = Array.from(document.querySelectorAll('input[name="feedback-goals"]:checked')).map(cb => cb.value);

          console.log('Workshop data:', { workStage, intent, feedbackGoals });

          if (!intent.trim()) {
            alert('Intent is required for workshop posts.');
            return;
          }

          postData.p_work_stage = workStage;
          postData.p_feedback_goals = feedbackGoals;
        }

        console.log('Calling post_to_workshop with:', postData);

        // Call the RPC function directly
        const { data, error } = await supabase.rpc('post_to_workshop', postData);

        if (error) {
          console.error('RPC error:', error);
          alert('Failed to post: ' + error.message);
          return;
        }

        console.log('Post created successfully:', data);
        // Close modal first
        document.getElementById('post-modal').classList.add('hidden');
        // Then reload
        window.location.reload();
        
      } catch (error) {
        console.error('Error posting:', error);
        alert('Failed to post: ' + error.message);
      }
    });
  }

  // --- EDIT FORM ---
  const editForm = document.getElementById('edit-community-form');
  if (editForm) {
    editForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      console.log('Updating community...');
      
      const name = document.getElementById('edit-name').value;
      const description = document.getElementById('edit-desc').value;
      let image_url = document.getElementById('edit-icon').value;
      let banner_url = document.getElementById('edit-banner').value;
      
      try {
        // Upload icon if file selected
        if (iconImageFile) {
          console.log('Uploading icon...');
          const iconFormData = new FormData();
          iconFormData.append('image', iconImageFile);
          iconFormData.append('folder', 'community-icons');
          
          const iconResponse = await fetch('/api/upload-image', {
            method: 'POST',
            body: iconFormData
          });
          
          if (iconResponse.ok) {
            const iconResult = await iconResponse.json();
            image_url = iconResult.url;
            console.log('Icon uploaded:', image_url);
          }
        }

        // Upload banner if file selected
        if (bannerImageFile) {
          console.log('Uploading banner...');
          const bannerFormData = new FormData();
          bannerFormData.append('image', bannerImageFile);
          bannerFormData.append('folder', 'community-banners');
          
          const bannerResponse = await fetch('/api/upload-image', {
            method: 'POST',
            body: bannerFormData
          });
          
          if (bannerResponse.ok) {
            const bannerResult = await bannerResponse.json();
            banner_url = bannerResult.url;
            console.log('Banner uploaded:', banner_url);
          }
        }

        // Update community
        const response = await fetch('/api/community/update', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ 
            community_id: communityId,
            name, 
            description, 
            image_url, 
            banner_url 
          })
        });
        
        if (response.ok) {
          console.log('Community updated successfully');
          window.location.reload();
        } else {
          const errorText = await response.text();
          console.error('Update failed:', errorText);
          alert('Failed to update community: ' + errorText);
        }
      } catch (error) {
        console.error('Error updating community:', error);
        alert('Failed to update community: ' + error.message);
      }
    });
  }

  // --- ADD SPARKS BUTTON (FOR TESTING) ---
  const addSparksBtn = document.getElementById('add-sparks-btn');
  if (addSparksBtn) {
    addSparksBtn.addEventListener('click', async () => {
      try {
        const response = await fetch('/api/add-sparks', {
          method: 'POST'
        });
        
        if (response.ok) {
          alert('Sparks added! You can now post to workshops.');
        } else {
          alert('Failed to add sparks');
        }
      } catch (error) {
        console.error('Error adding sparks:', error);
        alert('Failed to add sparks');
      }
    });
  }

  // Import supabase for RPC calls
  import { supabase } from '../../lib/supabase';
</script>