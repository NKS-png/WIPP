---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found">
  <div class="text-center py-20">
    <h1 class="text-6xl font-bold text-neutral-900 mb-4">404</h1>
    <h2 class="text-2xl font-semibold text-neutral-700 mb-8">Page Not Found</h2>
    <p class="text-neutral-500 mb-8">The page you're looking for doesn't exist.</p>
    <a href="/" class="bg-neutral-900 text-white px-6 py-3 rounded-lg hover:bg-neutral-800 transition-colors">
      Go Home
    </a>
  </div>
</BaseLayout>