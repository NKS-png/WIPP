---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Conversation Debug">
  <div class="max-w-4xl mx-auto py-8">
    <h1 class="text-3xl font-bold mb-6">Conversation System Debug</h1>
    
    <div class="space-y-6">
      <div class="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-xl p-6">
        <h2 class="text-xl font-semibold mb-4">Database Connection Test</h2>
        <button id="test-connection" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
          Test Database Connection
        </button>
        <div id="connection-results" class="mt-4 p-4 bg-neutral-50 dark:bg-neutral-800 rounded-lg hidden">
          <pre id="connection-output" class="text-sm overflow-auto"></pre>
        </div>
      </div>

      <div class="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-xl p-6">
        <h2 class="text-xl font-semibold mb-4">Test Conversation Creation</h2>
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium mb-2">Target User ID:</label>
            <input 
              type="text" 
              id="target-user-id" 
              placeholder="Enter a user ID to test with"
              class="w-full px-3 py-2 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-white dark:bg-neutral-800 text-neutral-900 dark:text-white"
            />
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Test Message:</label>
            <input 
              type="text" 
              id="test-message" 
              placeholder="Hello, this is a test message"
              value="Hello, this is a test message"
              class="w-full px-3 py-2 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-white dark:bg-neutral-800 text-neutral-900 dark:text-white"
            />
          </div>
          <button id="test-conversation" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">
            Test Create Conversation
          </button>
        </div>
        <div id="conversation-results" class="mt-4 p-4 bg-neutral-50 dark:bg-neutral-800 rounded-lg hidden">
          <pre id="conversation-output" class="text-sm overflow-auto"></pre>
        </div>
      </div>

      <div class="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-xl p-6">
        <h2 class="text-xl font-semibold mb-4">SQL Migration Status</h2>
        <p class="text-sm text-neutral-600 dark:text-neutral-400 mb-4">
          If you're seeing errors, you may need to run the conversation-fix.sql migration:
        </p>
        <div class="bg-neutral-100 dark:bg-neutral-800 p-4 rounded-lg">
          <code class="text-sm">
            -- Run this in your Supabase SQL editor:<br/>
            -- Copy and paste the contents of conversation-fix.sql
          </code>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  document.getElementById('test-connection')?.addEventListener('click', async () => {
    const resultsDiv = document.getElementById('connection-results');
    const outputPre = document.getElementById('connection-output');
    
    resultsDiv.classList.remove('hidden');
    outputPre.textContent = 'Testing connection...';
    
    try {
      const response = await fetch('/api/test-conversation-setup');
      const data = await response.json();
      
      outputPre.textContent = JSON.stringify(data, null, 2);
    } catch (error) {
      outputPre.textContent = `Error: ${error.message}`;
    }
  });

  document.getElementById('test-conversation')?.addEventListener('click', async () => {
    const targetUserId = document.getElementById('target-user-id').value.trim();
    const testMessage = document.getElementById('test-message').value.trim();
    const resultsDiv = document.getElementById('conversation-results');
    const outputPre = document.getElementById('conversation-output');
    
    if (!targetUserId) {
      alert('Please enter a target user ID');
      return;
    }
    
    resultsDiv.classList.remove('hidden');
    outputPre.textContent = 'Testing conversation creation...';
    
    try {
      const response = await fetch('/api/create-conversation', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          target_user_id: targetUserId,
          initial_message: testMessage
        })
      });
      
      const data = await response.json();
      
      outputPre.textContent = JSON.stringify({
        status: response.status,
        statusText: response.statusText,
        data: data
      }, null, 2);
    } catch (error) {
      outputPre.textContent = `Error: ${error.message}`;
    }
  });
</script>
</BaseLayout>