---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import { supabase } from '../../lib/supabase';

const { id } = Astro.params;

// 1. Auth & Ownership Check
const { data: sessionData } = await supabase.auth.getSession();
const currentUser = sessionData?.session?.user;
const isOwner = currentUser?.id === id;

// 2. Fetch Profile
const { data: profile } = await supabase
  .from('profiles')
  .select('*')
  .eq('id', id)
  .maybeSingle();

if (!profile) return Astro.redirect('/404');

// 3. Fetch Data
const { data: projects } = await supabase
  .from('projects')
  .select('*')
  .eq('user_id', id)
  .order('created_at', { ascending: false });

const { data: services } = await supabase
  .from('services')
  .select('*')
  .eq('user_id', id)
  .order('created_at', { ascending: false });

const displayName = profile.full_name || profile.username || "Unknown";
---

<BaseLayout title={displayName}>
  
  <div class="relative group h-64 w-full bg-neutral-100 dark:bg-neutral-800 overflow-hidden">
    {profile.banner_url ? (
      // The '?t=' part tricks the browser into downloading the new image
      <img src={`${profile.banner_url}?t=${new Date(profile.updated_at).getTime()}`} class="w-full h-full object-cover" />
    ) : (
      <div class="w-full h-full bg-gradient-to-r from-neutral-200 to-neutral-300 dark:from-neutral-800 dark:to-neutral-900"></div>
    )}
    
    {isOwner && (
      <a href="/settings" class="absolute top-4 right-4 bg-black/60 hover:bg-black/80 text-white text-xs font-bold px-4 py-2 rounded-full cursor-pointer transition-all backdrop-blur-md opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0">
        ðŸ“· Edit Cover
      </a>
    )}
  </div>

  <div class="max-w-7xl mx-auto px-6 mb-20">
    <div class="flex flex-col md:flex-row items-start gap-8 -mt-16 relative z-10">
      
      <div class="w-32 h-32 md:w-40 md:h-40 rounded-full border-4 border-white dark:border-neutral-900 bg-white dark:bg-neutral-900 overflow-hidden shadow-xl relative group">
        {profile.avatar_url ? (
          <img src={`${profile.avatar_url}?t=${new Date(profile.updated_at).getTime()}`} class="w-full h-full object-cover" />
        ) : (
          <div class="w-full h-full flex items-center justify-center text-4xl font-bold text-neutral-400 bg-neutral-100 dark:bg-neutral-800">
            {displayName[0]}
          </div>
        )}
        {isOwner && (
          <a href="/settings" class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity cursor-pointer text-white font-bold text-xs">
            Change
          </a>
        )}
      </div>

      <div class="flex-1 pt-4 md:pt-16">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
          <div>
            <h1 class="text-3xl font-bold text-neutral-900 dark:text-white">{displayName}</h1>
            <p class="text-neutral-500 font-medium">@{profile.username || 'user'}</p>
            <p class="mt-4 text-neutral-600 dark:text-neutral-300 max-w-xl leading-relaxed">
              {profile.bio || "No bio yet."}
            </p>
          </div>
          
          {isOwner && (
            <a href="/settings" class="border border-neutral-300 dark:border-neutral-700 px-6 py-2 rounded-full text-sm font-bold hover:bg-neutral-100 dark:hover:bg-neutral-800 transition-colors">
              Edit Profile
            </a>
          )}
        </div>
      </div>
    </div>

    <div class="mt-16 border-b border-neutral-200 dark:border-neutral-800 flex gap-8">
      <button class="tab-btn active-tab border-b-2 border-neutral-900 dark:border-white pb-3 font-bold text-neutral-900 dark:text-white transition-colors" data-target="tab-work">
        Portfolio <span class="ml-1 text-xs bg-neutral-100 dark:bg-neutral-800 px-2 py-0.5 rounded-full text-neutral-500">{projects?.length || 0}</span>
      </button>
      <button class="tab-btn border-b-2 border-transparent pb-3 font-medium text-neutral-500 hover:text-neutral-900 dark:hover:text-white transition-colors" data-target="tab-services">
        Services <span class="ml-1 text-xs bg-neutral-100 dark:bg-neutral-800 px-2 py-0.5 rounded-full text-neutral-500">{services?.length || 0}</span>
      </button>
    </div>

    <div class="py-10 min-h-[400px]">
      
      <div id="tab-work" class="tab-content grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects && projects.map((p) => (
          <div class="relative group">
            <ProjectCard project={p} />
            {isOwner && (
              <button 
                class="delete-project-btn absolute top-3 right-3 bg-red-500 text-white p-2 rounded-full opacity-0 group-hover:opacity-100 transition-all shadow-lg hover:scale-110 z-20"
                data-id={p.id}
                title="Delete Project"
              >
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
              </button>
            )}
          </div>
        ))}
        {projects?.length === 0 && (
          <div class="col-span-full text-center py-20 border-2 border-dashed border-neutral-100 dark:border-neutral-800 rounded-2xl">
            <p class="text-neutral-400">No projects uploaded yet.</p>
          </div>
        )}
      </div>

      <div id="tab-services" class="tab-content hidden">
        {isOwner && (
          <button id="add-service-btn" class="w-full mb-8 py-6 border-2 border-dashed border-neutral-300 dark:border-neutral-700 rounded-xl text-neutral-400 hover:text-neutral-900 dark:hover:text-white hover:border-neutral-900 dark:hover:border-white transition-all flex flex-col items-center justify-center gap-2 group">
            <div class="w-12 h-12 rounded-full bg-neutral-100 dark:bg-neutral-800 flex items-center justify-center group-hover:scale-110 transition-transform">
                <span class="text-2xl">+</span>
            </div>
            <span class="font-bold text-sm">Create a new Gig</span>
          </button>
        )}

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {services && services.map((s) => (
            <div class="group bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-xl overflow-hidden hover:shadow-xl transition-all hover:-translate-y-1">
              <div class="h-32 bg-gradient-to-br from-neutral-100 to-neutral-200 dark:from-neutral-800 dark:to-neutral-900 p-6 flex items-center justify-center">
                 <h3 class="text-center font-bold text-neutral-400 dark:text-neutral-600 uppercase tracking-widest text-xs">Service</h3>
              </div>
              <div class="p-5">
                <h3 class="font-bold text-lg text-neutral-900 dark:text-white leading-snug line-clamp-2 mb-2">{s.title}</h3>
                <p class="text-sm text-neutral-500 line-clamp-2 mb-6 min-h-[40px]">{s.description}</p>
                <div class="flex items-center justify-between pt-4 border-t border-neutral-100 dark:border-neutral-800">
                  <div class="flex flex-col">
                     <span class="text-[10px] uppercase font-bold text-neutral-400">Starting at</span>
                     <span class="text-lg font-bold text-neutral-900 dark:text-white">${s.price}</span>
                  </div>
                  <button class="px-4 py-2 bg-neutral-900 dark:bg-white text-white dark:text-black text-xs font-bold rounded-lg hover:opacity-90 transition-opacity">View Gig</button>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

    </div>
  </div>

  <div id="service-modal" class="fixed inset-0 bg-black/60 hidden flex items-center justify-center z-50 px-4 backdrop-blur-sm">
    <div class="bg-white dark:bg-neutral-900 p-8 rounded-2xl w-full max-w-lg shadow-2xl animate-fade-in-up">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-neutral-900 dark:text-white">Create a new Gig</h2>
        <button id="close-svc-modal" class="text-neutral-400 hover:text-neutral-900 dark:hover:text-white text-2xl">&times;</button>
      </div>
      <form id="service-form" class="space-y-6">
        <div>
          <label class="block text-xs font-bold uppercase text-neutral-500 mb-2">Gig Title</label>
          <div class="relative">
             <span class="absolute left-4 top-3 text-neutral-400 font-medium">I will</span>
             <input type="text" id="svc-title" class="input-field w-full pl-14" placeholder="design a minimalist logo for you" required />
          </div>
        </div>
        <div>
          <label class="block text-xs font-bold uppercase text-neutral-500 mb-2">Price ($)</label>
          <input type="number" id="svc-price" class="input-field w-full" placeholder="50" required />
        </div>
        <div>
          <label class="block text-xs font-bold uppercase text-neutral-500 mb-2">Description</label>
          <textarea id="svc-desc" rows="4" class="input-field w-full resize-none" placeholder="Describe what you are offering..." required></textarea>
        </div>
        <button type="submit" class="w-full py-3.5 rounded-xl bg-neutral-900 dark:bg-white text-white dark:text-black font-bold text-sm hover:opacity-90 transition-opacity shadow-lg">Publish Gig</button>
      </form>
    </div>
  </div>

</BaseLayout>

<script>
  import { supabase } from '../../lib/supabase';

  // --- TABS & MODALS ---
  const tabs = document.querySelectorAll('.tab-btn');
  const contents = document.querySelectorAll('.tab-content');
  const modal = document.getElementById('service-modal');
  const openBtn = document.getElementById('add-service-btn');
  const closeBtn = document.getElementById('close-svc-modal');
  const form = document.getElementById('service-form');

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      tabs.forEach(t => {
        t.classList.remove('border-neutral-900', 'dark:border-white', 'text-neutral-900', 'dark:text-white');
        t.classList.add('border-transparent', 'text-neutral-500');
      });
      tab.classList.remove('border-transparent', 'text-neutral-500');
      tab.classList.add('border-neutral-900', 'dark:border-white', 'text-neutral-900', 'dark:text-white');
      
      const target = tab.getAttribute('data-target');
      contents.forEach(c => c.classList.add('hidden'));
      document.getElementById(target)?.classList.remove('hidden');
    });
  });

  if (openBtn) openBtn.addEventListener('click', () => modal?.classList.remove('hidden'));
  if (closeBtn) closeBtn.addEventListener('click', () => modal?.classList.add('hidden'));
  if (modal) modal.addEventListener('click', (e) => { if(e.target === modal) modal.classList.add('hidden'); });

  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const titleInput = document.getElementById('svc-title') as HTMLInputElement;
      let title = titleInput.value;
      if (!title.toLowerCase().startsWith('i will')) title = 'I will ' + title;

      const price = (document.getElementById('svc-price') as HTMLInputElement).value;
      const desc = (document.getElementById('svc-desc') as HTMLTextAreaElement).value;

      const { data: { session } } = await supabase.auth.getSession();
      if(!session) return;

      const { error } = await supabase.from('services').insert({ title, description: desc, price, user_id: session.user.id });
      if(error) alert(error.message); else window.location.reload();
    });
  }

  // --- DELETE PROJECT ---
  const deleteBtns = document.querySelectorAll('.delete-project-btn');
  deleteBtns.forEach(btn => {
    btn.addEventListener('click', async (e) => {
      e.stopPropagation(); e.preventDefault();
      if(!confirm('Delete this project?')) return;
      const id = (btn as HTMLElement).dataset.id;
      const { error } = await supabase.from('projects').delete().eq('id', id);
      if(error) alert('Error deleting project'); else window.location.reload();
    });
  });
</script>

<style>
  .input-field {
    @apply px-4 py-3 rounded-xl bg-neutral-50 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 text-neutral-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-black dark:focus:ring-white transition-all;
  }
  .animate-fade-in-up { animation: fadeInUp 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards; opacity: 0; transform: translateY(20px); }
  @keyframes fadeInUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
</style>