---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import ChatIcon from '../components/ChatIcon.astro';
import NotificationToast from '../components/NotificationToast.astro';
import ViewportDetector from '../components/ViewportDetector.astro';
import '../styles/global.css';

const { title } = Astro.props;
---

<html lang="en" class="theme-loading">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <title>{title} | Wipp</title>
    <style>
      .theme-loading {
        visibility: hidden;
        opacity: 0;
      }
    </style>
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        if (theme === 'dark' || (!theme && prefersDark)) {
          document.documentElement.classList.add('dark');
        }
        document.documentElement.classList.remove('theme-loading');
      })();
    </script>
  </head>
  <body class="flex flex-col min-h-screen bg-stone-50 dark:bg-stone-900 text-stone-800 dark:text-stone-200 mobile-viewport-safe">
    <ViewportDetector />
    <Navbar />
    <main class="flex-grow w-full max-w-6xl mx-auto px-3 md:px-6 pt-8 pb-16 mobile-content-fit">
      <slot />
    </main>
    <Footer />
    <ChatIcon />
    <NotificationToast />
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
  </body>
</html>