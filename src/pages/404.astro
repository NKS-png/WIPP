---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found">
  <div class="text-center py-20">
    <h1 class="text-6xl font-normal text-stone-900 dark:text-stone-100 mb-4">404</h1>
    <h2 class="text-2xl font-normal text-stone-700 dark:text-stone-300 mb-8">Page Not Found</h2>
    <p class="text-stone-500 dark:text-stone-400 mb-8 font-normal">The page you're looking for doesn't exist.</p>
    <a href="/" class="bg-stone-900 dark:bg-stone-200 text-stone-50 dark:text-stone-900 px-6 py-3 rounded-xl hover:bg-stone-700 dark:hover:bg-stone-300 transition-colors font-normal">
      Go Home
    </a>
  </div>
</BaseLayout>