---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { supabase } from '../../lib/supabase';

// Server-side auth check using cookies (matches your site structure)
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const refreshToken = Astro.cookies.get('sb-refresh-token')?.value;

let session = null;
if (accessToken && refreshToken) {
  const { data } = await supabase.auth.setSession({
    access_token: accessToken,
    refresh_token: refreshToken,
  });
  session = data.session;
}

if (!session) {
  return Astro.redirect('/login');
}
---

<BaseLayout title="Create Community">
  <div class="min-h-[80vh] flex items-center justify-center px-6 py-12">
    <div class="w-full max-w-2xl">
      
      <div class="text-center mb-10">
        <h1 class="text-4xl md:text-5xl font-bold text-neutral-900 dark:text-white mb-3">
          Create a Community
        </h1>
        <p class="text-neutral-500 dark:text-neutral-400 text-lg">
          Build a space for like-minded artists to gather and share.
        </p>
      </div>
      
      <div class="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-3xl p-8 md:p-10 shadow-xl">
        <form id="create-community-form" class="space-y-6">
          
          <!-- Community Name -->
          <div>
            <label class="block text-sm font-bold text-neutral-700 dark:text-neutral-300 mb-2">
              Community Name
            </label>
            <input 
              type="text" 
              id="name" 
              class="w-full px-5 py-4 rounded-xl bg-neutral-50 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 text-neutral-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-purple-500 dark:focus:ring-purple-400 transition-all font-medium placeholder-neutral-400" 
              placeholder="e.g. Digital Artists Hub" 
              maxlength="50"
              required 
            />
            <p class="text-xs text-neutral-400 mt-1 ml-1">Choose a unique, descriptive name</p>
          </div>
          
          <!-- Description -->
          <div>
            <label class="block text-sm font-bold text-neutral-700 dark:text-neutral-300 mb-2">
              Description
            </label>
            <textarea 
              id="description" 
              class="w-full px-5 py-4 rounded-xl bg-neutral-50 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 text-neutral-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-purple-500 dark:focus:ring-purple-400 transition-all font-medium placeholder-neutral-400 resize-none" 
              rows="5" 
              placeholder="What is this community about? What kind of content and discussions should members expect?"
              maxlength="500"
              required
            ></textarea>
            <p class="text-xs text-neutral-400 mt-1 ml-1">Tell people what makes this community special</p>
          </div>

          <!-- Community Icon Upload -->
          <div>
            <label class="block text-sm font-bold text-neutral-700 dark:text-neutral-300 mb-2">
              Community Icon (Optional)
            </label>
            <div 
              id="icon-dropzone"
              class="border-2 border-dashed border-neutral-300 dark:border-neutral-600 rounded-xl p-8 text-center hover:border-purple-500 dark:hover:border-purple-400 transition-all cursor-pointer bg-neutral-50 dark:bg-neutral-800"
            >
              <input 
                type="file" 
                id="icon-input" 
                accept="image/*"
                class="hidden"
              />
              <div id="icon-placeholder" class="space-y-2">
                <div class="text-4xl">üì∑</div>
                <p class="text-sm font-semibold text-neutral-700 dark:text-neutral-300">
                  Drop an icon image here
                </p>
                <p class="text-xs text-neutral-400">
                  or click to browse (Square, max 2MB)
                </p>
              </div>
              <div id="icon-preview" class="hidden">
                <img class="w-24 h-24 rounded-full mx-auto object-cover border-4 border-white dark:border-neutral-800 shadow-lg" />
                <p class="text-xs text-neutral-500 mt-2">Click to change</p>
              </div>
            </div>
          </div>

          <!-- Banner Upload -->
          <div>
            <label class="block text-sm font-bold text-neutral-700 dark:text-neutral-300 mb-2">
              Banner Image (Optional)
            </label>
            <div 
              id="banner-dropzone"
              class="border-2 border-dashed border-neutral-300 dark:border-neutral-600 rounded-xl p-8 text-center hover:border-purple-500 dark:hover:border-purple-400 transition-all cursor-pointer bg-neutral-50 dark:bg-neutral-800"
            >
              <input 
                type="file" 
                id="banner-input" 
                accept="image/*"
                class="hidden"
              />
              <div id="banner-placeholder" class="space-y-2">
                <div class="text-4xl">üñºÔ∏è</div>
                <p class="text-sm font-semibold text-neutral-700 dark:text-neutral-300">
                  Drop a banner image here
                </p>
                <p class="text-xs text-neutral-400">
                  or click to browse (Wide format, max 5MB)
                </p>
              </div>
              <div id="banner-preview" class="hidden">
                <img class="w-full h-32 rounded-lg mx-auto object-cover shadow-lg" />
                <p class="text-xs text-neutral-500 mt-2">Click to change</p>
              </div>
            </div>
          </div>

          <!-- Error Message -->
          <div id="error-msg" class="hidden text-red-600 dark:text-red-400 text-sm bg-red-50 dark:bg-red-900/20 p-4 rounded-xl border border-red-200 dark:border-red-800">
          </div>

          <!-- Progress Bar -->
          <div id="upload-progress" class="hidden">
            <div class="bg-neutral-200 dark:bg-neutral-700 rounded-full h-2 overflow-hidden">
              <div id="progress-bar" class="bg-gradient-to-r from-purple-600 to-pink-600 h-full transition-all duration-300" style="width: 0%"></div>
            </div>
            <p id="progress-text" class="text-xs text-neutral-500 text-center mt-2">Uploading images...</p>
          </div>

          <!-- Submit Button -->
          <div class="pt-2">
            <button 
              type="submit" 
              id="submit-btn" 
              class="w-full py-4 rounded-xl bg-gradient-to-r from-purple-600 to-pink-600 text-white font-bold text-lg hover:shadow-lg hover:scale-[1.02] active:scale-[0.98] transition-all flex items-center justify-center gap-2"
            >
              <span>üöÄ</span>
              <span>Create Community</span>
            </button>
          </div>
        </form>
      </div>

      <div class="text-center mt-8">
        <a 
          href="/communities" 
          class="text-sm font-semibold text-neutral-500 hover:text-neutral-900 dark:hover:text-white transition-colors"
        >
          ‚Üê Back to Communities
        </a>
      </div>

    </div>
  </div>
</BaseLayout>

<script>
  import { createClient } from '@supabase/supabase-js';
  
  const supabase = createClient(
    import.meta.env.PUBLIC_SUPABASE_URL,
    import.meta.env.PUBLIC_SUPABASE_ANON_KEY
  );

  // File storage
  let iconFile: File | null = null;
  let bannerFile: File | null = null;

  // Elements
  const form = document.getElementById('create-community-form') as HTMLFormElement;
  const errorMsg = document.getElementById('error-msg') as HTMLDivElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const uploadProgress = document.getElementById('upload-progress') as HTMLDivElement;
  const progressBar = document.getElementById('progress-bar') as HTMLDivElement;
  const progressText = document.getElementById('progress-text') as HTMLParagraphElement;

  // Icon Upload
  const iconDropzone = document.getElementById('icon-dropzone') as HTMLDivElement;
  const iconInput = document.getElementById('icon-input') as HTMLInputElement;
  const iconPlaceholder = document.getElementById('icon-placeholder') as HTMLDivElement;
  const iconPreview = document.getElementById('icon-preview') as HTMLDivElement;

  // Banner Upload
  const bannerDropzone = document.getElementById('banner-dropzone') as HTMLDivElement;
  const bannerInput = document.getElementById('banner-input') as HTMLInputElement;
  const bannerPlaceholder = document.getElementById('banner-placeholder') as HTMLDivElement;
  const bannerPreview = document.getElementById('banner-preview') as HTMLDivElement;

  // Icon Drag & Drop
  iconDropzone.addEventListener('click', () => iconInput.click());
  
  iconDropzone.addEventListener('dragover', (e) => {
    e.preventDefault();
    iconDropzone.classList.add('border-purple-500', 'bg-purple-50', 'dark:bg-purple-900/10');
  });

  iconDropzone.addEventListener('dragleave', () => {
    iconDropzone.classList.remove('border-purple-500', 'bg-purple-50', 'dark:bg-purple-900/10');
  });

  iconDropzone.addEventListener('drop', (e) => {
    e.preventDefault();
    iconDropzone.classList.remove('border-purple-500', 'bg-purple-50', 'dark:bg-purple-900/10');
    const files = e.dataTransfer?.files;
    if (files && files[0]) {
      handleIconFile(files[0]);
    }
  });

  iconInput.addEventListener('change', (e) => {
    const target = e.target as HTMLInputElement;
    if (target.files && target.files[0]) {
      handleIconFile(target.files[0]);
    }
  });

  function handleIconFile(file: File) {
    if (!file.type.startsWith('image/')) {
      showError('Please upload an image file');
      return;
    }
    if (file.size > 2 * 1024 * 1024) {
      showError('Icon must be less than 2MB');
      return;
    }

    iconFile = file;
    const reader = new FileReader();
    reader.onload = (e) => {
      const img = iconPreview.querySelector('img') as HTMLImageElement;
      img.src = e.target?.result as string;
      iconPlaceholder.classList.add('hidden');
      iconPreview.classList.remove('hidden');
    };
    reader.readAsDataURL(file);
  }

  // Banner Drag & Drop
  bannerDropzone.addEventListener('click', () => bannerInput.click());
  
  bannerDropzone.addEventListener('dragover', (e) => {
    e.preventDefault();
    bannerDropzone.classList.add('border-purple-500', 'bg-purple-50', 'dark:bg-purple-900/10');
  });

  bannerDropzone.addEventListener('dragleave', () => {
    bannerDropzone.classList.remove('border-purple-500', 'bg-purple-50', 'dark:bg-purple-900/10');
  });

  bannerDropzone.addEventListener('drop', (e) => {
    e.preventDefault();
    bannerDropzone.classList.remove('border-purple-500', 'bg-purple-50', 'dark:bg-purple-900/10');
    const files = e.dataTransfer?.files;
    if (files && files[0]) {
      handleBannerFile(files[0]);
    }
  });

  bannerInput.addEventListener('change', (e) => {
    const target = e.target as HTMLInputElement;
    if (target.files && target.files[0]) {
      handleBannerFile(target.files[0]);
    }
  });

  function handleBannerFile(file: File) {
    if (!file.type.startsWith('image/')) {
      showError('Please upload an image file');
      return;
    }
    if (file.size > 5 * 1024 * 1024) {
      showError('Banner must be less than 5MB');
      return;
    }

    bannerFile = file;
    const reader = new FileReader();
    reader.onload = (e) => {
      const img = bannerPreview.querySelector('img') as HTMLImageElement;
      img.src = e.target?.result as string;
      bannerPlaceholder.classList.add('hidden');
      bannerPreview.classList.remove('hidden');
    };
    reader.readAsDataURL(file);
  }

  // Upload to Supabase Storage - IMPROVED WITH BETTER ERROR HANDLING
  async function uploadImage(file: File, bucketName: string, folder: string): Promise<string | null> {
    try {
      console.log(`Attempting to upload to bucket: ${bucketName}`);
      
      const fileExt = file.name.split('.').pop();
      const fileName = `${Math.random().toString(36).substring(2)}-${Date.now()}.${fileExt}`;
      const filePath = `${folder}/${fileName}`;

      console.log(`Uploading file: ${filePath}`);

      // First, check if bucket exists and is accessible
      const { data: buckets, error: bucketError } = await supabase.storage.listBuckets();
      
      if (bucketError) {
        console.error('Bucket list error:', bucketError);
        throw new Error(`Storage access error: ${bucketError.message}`);
      }

      const bucketExists = buckets?.some(b => b.name === bucketName);
      if (!bucketExists) {
        throw new Error(`Bucket "${bucketName}" does not exist. Please create it in Supabase Dashboard.`);
      }

      // Upload the file
      const { data, error } = await supabase.storage
        .from(bucketName)
        .upload(filePath, file, {
          cacheControl: '3600',
          upsert: false
        });

      if (error) {
        console.error('Upload error details:', error);
        throw new Error(`Upload failed: ${error.message}`);
      }

      console.log('Upload successful:', data);

      // Get public URL
      const { data: { publicUrl } } = supabase.storage
        .from(bucketName)
        .getPublicUrl(filePath);

      console.log('Public URL:', publicUrl);
      return publicUrl;

    } catch (err: any) {
      console.error('Upload error:', err);
      throw err;
    }
  }

  function showError(message: string) {
    errorMsg.innerText = message;
    errorMsg.classList.remove('hidden');
    setTimeout(() => errorMsg.classList.add('hidden'), 8000);
  }

  // Form Submit
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Show loading state
      const originalBtnText = submitBtn.innerHTML;
      submitBtn.innerHTML = '<span class="animate-spin inline-block">‚ü≥</span> Creating...';
      submitBtn.disabled = true;
      submitBtn.classList.add('opacity-70', 'cursor-not-allowed');
      errorMsg.classList.add('hidden');

      // Get form values
      const name = (document.getElementById('name') as HTMLInputElement).value.trim();
      const description = (document.getElementById('description') as HTMLTextAreaElement).value.trim();
      
      // Validate
      if (!name || !description) {
        showError('Please fill in all required fields.');
        submitBtn.innerHTML = originalBtnText;
        submitBtn.disabled = false;
        submitBtn.classList.remove('opacity-70', 'cursor-not-allowed');
        return;
      }

      try {
        // Get current user session
        const { data: { session } } = await supabase.auth.getSession();
        
        if (!session) {
          window.location.href = '/login';
          return;
        }

        let iconUrl: string | null = null;
        let bannerUrl: string | null = null;

        // Upload images if provided
        if (iconFile || bannerFile) {
          uploadProgress.classList.remove('hidden');
          progressBar.style.width = '0%';

          if (iconFile) {
            try {
              progressText.innerText = 'Uploading icon...';
              progressBar.style.width = '25%';
              
              iconUrl = await uploadImage(iconFile, 'projects', 'community-icons');
              
              progressBar.style.width = '50%';
              console.log('Icon uploaded successfully:', iconUrl);
            } catch (err: any) {
              console.error('Icon upload failed:', err);
              throw new Error(`Icon upload failed: ${err.message}`);
            }
          }

          if (bannerFile) {
            try {
              progressText.innerText = 'Uploading banner...';
              progressBar.style.width = '60%';
              
              bannerUrl = await uploadImage(bannerFile, 'projects', 'community-banners');
              
              progressBar.style.width = '80%';
              console.log('Banner uploaded successfully:', bannerUrl);
            } catch (err: any) {
              console.error('Banner upload failed:', err);
              throw new Error(`Banner upload failed: ${err.message}`);
            }
          }
        }

        progressText.innerText = 'Creating community...';
        console.log('Creating community with user:', session.user.id);

        // Create the community
        const { data: community, error: createError } = await supabase
          .from('communities')
          .insert({ 
            name, 
            description,
            image_url: iconUrl,
            banner_url: bannerUrl,
            admin_id: session.user.id
          })
          .select()
          .single();

        if (createError) {
          console.error('Community creation error:', createError);
          throw createError;
        }

        progressBar.style.width = '90%';

        // Auto-join creator as admin member
        const { error: joinError } = await supabase
          .from('community_members')
          .insert({
            community_id: community.id,
            user_id: session.user.id,
            role: 'admin'
          });

        if (joinError) {
          console.warn('Auto-join error:', joinError.message);
        }

        progressBar.style.width = '100%';
        progressText.innerText = 'Success! Redirecting...';

        // Redirect to the new community page
        setTimeout(() => {
          window.location.href = `/c/${community.id}`;
        }, 500);

      } catch (err: any) {
        console.error('Error creating community:', err);
        
        let errorMessage = 'Failed to create community. Please try again.';
        
        if (err.message.includes('Bucket')) {
          errorMessage = err.message + ' Go to Supabase Dashboard ‚Üí Storage ‚Üí Create bucket.';
        } else if (err.code === '23505') {
          errorMessage = 'A community with this name already exists.';
        } else if (err.message) {
          errorMessage = err.message;
        }
        
        showError(errorMessage);
        uploadProgress.classList.add('hidden');
        
        // Reset button
        submitBtn.innerHTML = originalBtnText;
        submitBtn.disabled = false;
        submitBtn.classList.remove('opacity-70', 'cursor-not-allowed');
      }
    });

    // Character counter for description
    const descTextarea = document.getElementById('description') as HTMLTextAreaElement;
    if (descTextarea) {
      descTextarea.addEventListener('input', () => {
        const remaining = 500 - descTextarea.value.length;
        const label = descTextarea.previousElementSibling as HTMLElement;
        if (label) {
          label.innerHTML = `Description <span class="text-xs text-neutral-400">(${remaining} characters remaining)</span>`;
        }
      });
    }
  }
</script>

<style>
  @keyframes spin {
    to { transform: rotate(360deg); }
  }
  
  .animate-spin {
    animation: spin 1s linear infinite;
  }
</style>