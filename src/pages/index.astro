function getEmojiAvatar(username: string): string {
  // Add null safety check
  if (!username) username = 'user';
  const hash = String(username).split('').reduce((a, b) => a + b.charCodeAt(0), 0);
  const emoji = emojis[hash % emojis.length];
  const svg = `<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><rect width="100" height="100" fill="#f3f4f6"/><text x="50" y="65" font-size="50" text-anchor="middle">${emoji}</text></svg>`;
  
  // Use URL encoding for better serverless compatibility
  return `data:image/svg+xml;charset=utf-8,${encodeURIComponent(svg)}`;
}

// 1. FETCH PROJECTS (The Main Feed)
const { data: projects, error } = await supabase
  .from('projects')
  .select(`
    *,
    profiles (username, avatar_url, full_name)
  `)
  .order('created_at', { ascending: false })
  .limit(10);

// 2. FETCH TOP CREATORS (Sidebar)
const { data: creators } = await supabase
  .from('profiles')
  .select('id, username, full_name, avatar_url')
  .limit(4);

// 3. FETCH TRENDING COMMUNITIES (Sidebar - New!)
// We fetch the latest 4 for now. In a real app, order by member count.
const { data: communities } = await supabase
  .from('communities')
  .select('id, name, image_url, members:community_members(count)')
  .limit(4);

const categories = [
  "All", "Web Design", "Mobile Apps", "Illustration", "AI Art", "Branding", "3D Motion", "Photography"
];
---

<BaseLayout title="Home">
  
  <section class="relative bg-stone-50 dark:bg-stone-900 border-b border-stone-200 dark:border-stone-700">
    <div class="max-w-4xl mx-auto px-6 py-12 md:py-20 text-center">
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-normal mb-3 md:mb-4 text-stone-800 dark:text-stone-200 leading-tight">
        A place for work in progress
      </h1>
      <p class="text-stone-500 dark:text-stone-400 text-sm md:text-base mb-6 md:mb-8 font-normal italic">
        Process over performance.
      </p>
      <p class="text-stone-600 dark:text-stone-400 text-base md:text-lg max-w-2xl mx-auto mb-8 md:mb-12 leading-relaxed">
        Share unfinished work, get thoughtful feedback, and grow as an artist in a community that values process over perfection.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/explore" class="btn-primary">
          Browse Work
        </a>
        <a href="/communities" class="btn-secondary">
          Find Your Community
        </a>
      </div>
      
      <!-- Subtle Community Signals -->
      <div class="mt-8 text-center">
        <p class="text-stone-500 dark:text-stone-400 text-sm">
          {projects && projects.length > 0 ? `${projects.length} works shared this week` : 'A quiet space for artists to share unfinished work'}
        </p>
      </div>
    </div>
  </section>

  <div class="sticky md:top-24 top-20 z-30 bg-stone-50/90 dark:bg-stone-900/90 backdrop-blur-sm border-b border-stone-200 dark:border-stone-700">
    <div class="max-w-6xl mx-auto px-6 py-4">
      <div class="flex items-center gap-3 overflow-x-auto no-scrollbar pb-2 -mx-2 px-2">
        {categories.map((cat, index) => (
          <a href={`/explore?category=${cat}`} class={`flex-shrink-0 whitespace-nowrap px-4 py-2 rounded-full text-sm font-normal transition-all ${index === 0 ? 'bg-stone-800 dark:bg-stone-200 text-stone-50 dark:text-stone-900' : 'bg-stone-100 dark:bg-stone-800 text-stone-600 dark:text-stone-400 border border-stone-200 dark:border-stone-700 hover:border-stone-400 dark:hover:border-stone-500'}`}>
            {cat}
          </a>
        ))}
      </div>
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-6 py-12">
    
    <!-- Mobile-only Top Creators & Communities -->
    <div class="lg:hidden mb-12 space-y-8">
      
      <!-- Top Creators - Mobile -->
      <div class="bg-stone-100 dark:bg-stone-800 border border-stone-200 dark:border-stone-700 rounded-2xl p-6">
        <h3 class="font-normal text-stone-800 dark:text-stone-200 mb-6 text-base">Featured Artists</h3>
        <div class="flex gap-6 overflow-x-auto no-scrollbar pb-2 -mx-2 px-2">
          {creators?.map((creator) => (
            <a href={`/profile/${creator.id}`} class="flex-shrink-0 flex flex-col items-center gap-3 group min-w-[90px]">
              <div class="w-14 h-14 rounded-xl bg-stone-200 dark:bg-stone-700 overflow-hidden border border-stone-300 dark:border-stone-600">
                <img src={creator.avatar_url || getEmojiAvatar(creator.username || 'user')} class="w-full h-full object-cover" />
              </div>
              <div class="text-center">
                <p class="text-sm font-normal text-stone-700 dark:text-stone-300 truncate group-hover:text-stone-900 dark:group-hover:text-stone-100 transition-colors max-w-[80px]">
                  {creator.full_name?.split(' ')[0] || creator.username}
                </p>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Trending Communities - Mobile -->
      <div class="bg-stone-100 dark:bg-stone-800 border border-stone-200 dark:border-stone-700 rounded-2xl p-6">
        <h3 class="font-normal text-stone-800 dark:text-stone-200 mb-6 text-base">Communities</h3>
        <div class="flex gap-6 overflow-x-auto no-scrollbar pb-2 -mx-2 px-2">
          {communities?.map((c) => (
            <a href={`/c/${c.id}`} class="flex-shrink-0 flex flex-col items-center gap-3 group min-w-[90px]">
              <div class="w-14 h-14 rounded-xl bg-stone-300 dark:bg-stone-600 text-stone-700 dark:text-stone-300 flex items-center justify-center font-normal text-base">
                {c.image_url ? <img src={c.image_url} class="w-full h-full object-cover rounded-xl"/> : c.name[0]}
              </div>
              <div class="text-center">
                <p class="text-sm font-normal text-stone-700 dark:text-stone-300 group-hover:text-stone-900 dark:group-hover:text-stone-100 max-w-[80px] truncate">{c.name}</p>
                <p class="text-xs text-stone-500 dark:text-stone-400">{c.members?.[0]?.count || 0}</p>
              </div>
            </a>
          ))}
        </div>
        <div class="text-center mt-6">
          <a href="/communities" class="text-sm font-normal text-stone-600 dark:text-stone-400 hover:text-stone-800 dark:hover:text-stone-200 transition-colors">
            View All â†’
          </a>
        </div>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-12">
    
    <div class="lg:col-span-3 space-y-10">
      
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-normal text-stone-800 dark:text-stone-200">
          What people are working on
        </h2>
        <div class="text-base font-normal text-stone-600 dark:text-stone-400">
           <a href="/explore" class="hover:text-stone-800 dark:hover:text-stone-200 transition-colors">View All â†’</a>
        </div>
      </div>

      {projects && projects.length > 0 ? (
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
          {projects.map((project, index) => (
            <div class={`${index % 3 === 1 ? 'sm:mt-4' : index % 5 === 2 ? 'sm:mt-2' : ''}`}>
              <ProjectCard project={project} />
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-20 bg-stone-100 dark:bg-stone-800 border border-stone-200 dark:border-stone-700 rounded-2xl">
          <p class="text-stone-600 dark:text-stone-400 mb-4">No projects yet. Be the first to share your work.</p>
          <p class="text-stone-500 dark:text-stone-500 text-sm mb-4 italic">It's okay if it's not finished.</p>
          <a href="/post" class="text-stone-700 dark:text-stone-300 font-normal hover:text-stone-900 dark:hover:text-stone-100 transition-colors">Share Your Work â†’</a>
        </div>
      )}
      
      <div class="text-center pt-8 border-t border-stone-200 dark:border-stone-700">
        <a href="/explore" class="btn-secondary inline-flex items-center gap-2">
          Load more
        </a>
      </div>
    </div>

    <!-- Desktop Sidebar -->
    <aside class="hidden lg:block lg:col-span-1 space-y-10">
      
      <div class="bg-stone-100 dark:bg-stone-800 border border-stone-200 dark:border-stone-700 rounded-2xl p-6">
        <h3 class="font-normal text-stone-800 dark:text-stone-200 mb-6 text-base">Featured Artists</h3>
        <div class="space-y-5">
          {creators?.map((creator) => (
            <a href={`/profile/${creator.id}`} class="flex items-center gap-4 group">
              <div class="w-12 h-12 rounded-xl bg-stone-200 dark:bg-stone-700 overflow-hidden border border-stone-300 dark:border-stone-600">
                <img src={creator.avatar_url || getEmojiAvatar(creator.username || 'user')} class="w-full h-full object-cover" />
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-base font-normal text-stone-700 dark:text-stone-300 truncate group-hover:text-stone-900 dark:group-hover:text-stone-100 transition-colors">
                  {creator.full_name || creator.username}
                </p>
                <p class="text-sm text-stone-500 dark:text-stone-400 truncate">@{creator.username}</p>
              </div>
            </a>
          ))}
        </div>
      </div>

      <div class="bg-stone-100 dark:bg-stone-800 border border-stone-200 dark:border-stone-700 rounded-2xl p-6 sticky top-32">
        <h3 class="font-normal text-stone-800 dark:text-stone-200 mb-6 text-base">Communities</h3>
        <div class="space-y-5">
          {communities?.map((c) => (
             <a href={`/c/${c.id}`} class="flex items-center gap-4 group">
                <div class="w-12 h-12 rounded-xl bg-stone-300 dark:bg-stone-600 text-stone-700 dark:text-stone-300 flex items-center justify-center font-normal text-base">
                    {c.image_url ? <img src={c.image_url} class="w-full h-full object-cover rounded-xl"/> : c.name[0]}
                </div>
                <div class="flex-1">
                    <p class="text-base font-normal text-stone-700 dark:text-stone-300 group-hover:text-stone-900 dark:group-hover:text-stone-100 transition-colors">{c.name}</p>
                    <p class="text-sm text-stone-500 dark:text-stone-400">{c.members?.[0]?.count || 0} Members</p>
                </div>
             </a>
          ))}
        </div>
        <a href="/communities" class="block mt-6 text-sm font-normal text-stone-600 dark:text-stone-400 hover:text-stone-800 dark:hover:text-stone-200 transition-colors text-center">
            View All Communities â†’
        </a>
      </div>

    </aside>

    </div>
  </div>
</BaseLayout>

<style>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
  
  /* Gentle, optional fade-in - much more subtle */
  .gentle-fade {
    opacity: 0.95;
    transition: opacity 0.3s ease;
  }
  
  .gentle-fade:hover {
    opacity: 1;
  }
</style>